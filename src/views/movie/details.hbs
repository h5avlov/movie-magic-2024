<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{ movie.title }}</h1> 
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{ movie.genre }}</p>
                        <p class="card-director">Director: {{ movie.director }}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{ movie.year }}</p>
                        <p class="card-ranking">Rating: <span id="stars">&#x2605; &#x2605; &#x2605;
                                &#x2605;</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{ movie.description }}</p> 

                <div>
                    <a style="display: inline-block;" href="/movies/update/{{ movie._id }}" class="details">Update</a>
                </div>

                <div>
                    <a style="display: inline-block;" href="/movies/{{ movie._id }}/attach-cast/" class="details">Attach Cast</a> 
                </div>
            </div>
        </div>
        <div class="card_right">
            <img src="{{ movie.image }}" 
                alt="image">
        </div>
    </div>

    <div class="main-cast-card"> 
        {{#each movie.casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src="{{ imageUrl }}"
                    alt="cast">
            </div>
            <div class="cast-info">
                <h1>{{ name }}</h1>
                <h3>Age: {{ age }}</h3>
                <h3>Born: {{ born }}</h3>
                <h3>Name in Movie: Ariel</h3> 

                <a clsss="details" href="/casts/{{ _id }}/update">Update</a> 
            </div>
        </div> 
        {{/each}}
    </div>

</section>
